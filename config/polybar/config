[module/taskwarrior]
type = custom/script
interval = 30
format-prefix = " "
format-suffix = " "
format-foreground = ${colors.secondary}
format = <label>
exec = /home/joo/.scripts/polybar_taskwarrior.py
format-underline = ${colors.bg}

[module/spotify]
type = custom/script
interval = 2
format-prefix = " "
format-suffix = " "
format-foreground = ${colors.secondary}
format = <label>
exec = python /home/joo/.scripts/spotify_status.py -f '{artist}: {song}'
;exec = python /home/joo/.scripts/spotify_status.py
;format-underline = ${colors.highlight}
format-underline = ${colors.bg}

[module/system-usb-udev]
type = custom/script
