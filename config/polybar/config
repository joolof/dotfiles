; >> i3
[module/i3]
type = internal/i3
format = <label-state>
;format = <label-state><label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

;ws-icon-0 = 1;
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
ws-icon-default = ♟

label-mode-padding = 2
label-mode-foreground = ${colors.fg}
label-mode-background = ${colors.bg}

; focused = Active workspace on focused monitor
label-focused = %icon%
;label-focused-foreground = ${colors.bg}
;label-focused-background = ${colors.fg}
;label-focused-underline = ${colors.highlight}
label-focused-foreground = ${colors.bg}
label-focused-background = ${colors.secondary}
label-focused-underline = ${colors.secondary}
label-focused-padding = ${self.label-mode-padding}

; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-background = ${colors.bg}
;label-unfocused-foreground = ${colors.fg}
label-unfocused-foreground = ${colors.secondary}
label-unfocused-padding = ${self.label-mode-padding}
label-unfocused-underline = ${colors.secondary}

; visible = Active workspace on unfocused monitor
;label-visible = %icon%
;label-visible-background = ${self.label-focused-background}
;label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-mode-padding}

; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-background = ${colors.bg}
label-urgent-foreground = ${colors.fg}
;label-urgent-background = ${self.label-mode-foreground}
;label-urgent-foreground = ${self.label-mode-background}
label-urgent-padding = ${self.label-mode-padding}
label-urgent-underline = ${colors.highlight}


